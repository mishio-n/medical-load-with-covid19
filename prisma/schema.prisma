generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Facility {
  id         String  @id
  name       String
  prefecture String
  address    String
  tel        String
  latitude   Decimal
  longtitude Decimal
  city       String
  cityCode   String

  submissions FacilitySubmission[]
}

model FacilitySubmission {
  id           Int          @id @default(autoincrement())
  date         String
  answer       AnswerType
  facilityType FacilityType

  Facility   Facility @relation(fields: [facilityId], references: [id])
  facilityId String

  @@unique([date, facilityId, facilityType])
}

enum FacilityType {
  HOSPITAL
  OUTPATIENT
  EMERGENCY
}

enum AnswerType {
  NORMAL
  LIMITTED
  STOPPED
  NOANSWER
  NULL
}
